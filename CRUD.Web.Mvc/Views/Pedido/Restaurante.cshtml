@model ICollection<CRUD.Entities.Pedido>
@{
    ViewBag.Title = "Consultar pedidos";
}

<div class="jumbotron jumbotron-fluid" style="margin-top: 70px">
    <div class="container">
        <div class="form-group">
            <label class="fonte-form" for="Horario">Data</label>

            <div class="form-inline">
                <input type="date" class="form-control" id="Horario" name="Horario">
                <button id="btnFiltrar" type="submit" class="btn btn-success">Filtrar</button>
            </div>
        </div>

        <table class="table table-striped" style="margin-top: 50px">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Funcionário</th>
                    <th scope="col">Tamanho</th>
                    <th scope="col">Empresa</th>
                    <th scope="col">Horário</th>
                    <th scope="col">Arroz</th>
                    <th scope="col">Feijão</th>
                    <th scope="col">Refogado</th>
                    <th scope="col">Proteina</th>
                    <th scope="col">Salada</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Funcionario</td>
                        <td>@item.Tamanho</td>
                        <td>@item.Empresa.Nome</td>
                        <td>@item.Horario.ToString()</td>
                        @if (item.Arroz)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                        @if (item.Feijao)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                        @if (item.Refogado)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                        @if (item.Proteina)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                        @if (item.Salada)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <div class="row" align="right" style="margin-top: 50px; margin-right:auto">
            @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#btnFiltrar").click(function () {
                window.location.href = "/Pedido/Restaurante?data=" + $("#Horario").val();
            });
        });
    </script>
}